# Josephus Problem | Game of Death in a circle 
def game_death(n,k,l,i):
    # Basic codition
    if len(l) == 1:
        return l[0]

    # Hypothesis
    i = ((i+k-1)% len(l))
    del l[i]
    game_death(n,k,l,i)
    return l[0]
    
n = 41
l = []
for i in range(1,n+1):
    l.append(i)
k = 2
i = 0
print(game_death(n,k,l,i))


# Ans :- 19
